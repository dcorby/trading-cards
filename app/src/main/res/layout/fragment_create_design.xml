<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create_design_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:padding="16dp"
    tools:context=".ui.main.CreateDesignFragment">

    <RelativeLayout
        android:id="@+id/design_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border_black"
        android:clipChildren="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/controls_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/controls_view"
        android:background="@color/blue3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/design_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <!-- Click to add a view. Default view has a light blue border that goes away
        when color is != #FFFFFF. Long press to delete -->
        <Button
            android:id="@+id/rectangle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Rect"
            android:layout_weight="1">
        </Button>

        <com.skydoves.colorpickerview.ColorPickerView
            android:id="@+id/color_picker"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <!-- Long press to delete -->
        <Spinner
            android:id="@+id/text_mappings"
            android:entries="@array/text_mappings"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>